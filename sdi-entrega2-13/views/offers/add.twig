{% extends "layout.twig" %}
{% block title %} Tienda – uoMusic {% endblock %}
{% block body %}
    <h2>Agregar oferta</h2>
    <form class="form-horizontal" method="post" action="/offers/add" enctype="multipart/form-data">
        <div class="form-group">
            <label class="control-label col-sm-2" for="title">Título:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" placeholder="Título de la oferta"
                       required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="detail">Detalle:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="detail" name="detail" placeholder="Detalle de la oferta"
                       required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="price">Precio (€):</label>
            <div class="col-sm-10">
                <input type="number" step="0.01" id="price" class="form-control" name="price"
                       placeholder="2.50" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </form>
{% endblock %}